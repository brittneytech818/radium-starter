{
  "name": "radium-starter",
  "version": "0.11.9",
  "description": "The minimum viable layer on top of HTML/CSS (using React and Radium)",
  "keywords": [
    "base",
    "style",
    "html",
    "css",
    "react",
    "radium",
    "reset",
    "normalize",
    "theme",
    "color",
    "typography",
    "form",
    "variables",
    "defaults",
    "minimal",
    "layer",
    "starter"
  ],
  "author": "Manuel Vila <mvila@3base.com>",
  "license": "MIT",
  "homepage": "https://mvila.github.io/radium-starter/",
  "reveal": true,
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/mvila/radium-starter"
  },
  "scripts": {
    "compile": "babel src --out-dir lib",
    "build-docs": "(export NODE_ENV=production; node docs)",
    "build-demo": "(export NODE_ENV=production; node demo)",
    "publish-docs-and-demo": "git checkout gh-pages && cp -R docs/dist/* . && cp -R demo/dist/* demo/ && (test -z \"$(git status --porcelain)\" || (git commit --all --message \"Update docs and demo files\" && git push)) && git checkout master",
    "release": "npm run lint && npm run compile && npm test && (git checkout --quiet master && test -z \"$(git status --porcelain)\" && npm version $npm_config_release_type && git push --follow-tags && npm publish && npm run build-demo && npm run build-docs && npm run publish-docs-and-demo) || echo \"An error occurred (uncommitted changes?)\"",
    "release-patch": "npm run release --release-type=patch",
    "release-minor": "npm run release --release-type=minor",
    "release-major": "npm run release --release-type=major",
    "lint": "eslint .",
    "test": "echo \"Warning: no test specified\" && exit 0"
  },
  "dependencies": {
    "color": "^3.0.0",
    "event-emitter-mixin": "^0.3.8",
    "lodash": "^4.17.10",
    "radium-normalize": "^2.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "denodeify": "^1.2.1",
    "eslint": "^4.19.1",
    "eslint-config-xo": "^0.22.2",
    "eslint-plugin-react": "^7.8.2",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-watch": "^0.5.8",
    "prismjs": "^1.14.0",
    "prop-types": "^15.6.1",
    "radium": "^0.24.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "remarkable": "^1.7.1",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.3.27",
    "watchify": "^3.10.0"
  }
}
