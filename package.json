{
  "name": "radium-starter",
  "version": "0.9.5",
  "description": "The minimum viable layer on top of HTML/CSS (using React and Radium)",
  "keywords": [
    "base",
    "style",
    "html",
    "css",
    "react",
    "radium",
    "reset",
    "normalize",
    "theme",
    "color",
    "typography",
    "form",
    "variables",
    "defaults",
    "minimal",
    "layer",
    "starter"
  ],
  "author": "Manuel Vila <mvila@3base.com>",
  "license": "MIT",
  "homepage": "https://mvila.github.io/radium-starter/",
  "reveal": true,
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/mvila/radium-starter"
  },
  "scripts": {
    "compile": "babel src --out-dir lib",
    "build-docs": "(export NODE_ENV=production; node docs)",
    "build-demo": "(export NODE_ENV=production; node demo)",
    "publish-docs-and-demo": "git checkout gh-pages && cp -R docs/dist/* . && cp -R demo/dist/* demo/ && (test -z \"$(git status --porcelain)\" || (git commit --all --message \"Update docs and demo files\" && git push)) && git checkout master",
    "release": "npm run lint && npm run compile && npm test && (git checkout --quiet master && test -z \"$(git status --porcelain)\" && npm version $npm_config_release_type && git push --follow-tags && npm publish && npm run build-demo && npm run build-docs && npm run publish-docs-and-demo) || echo \"An error occurred (uncommitted changes?)\"",
    "release-patch": "npm run release --release-type=patch",
    "release-minor": "npm run release --release-type=minor",
    "release-major": "npm run release --release-type=major",
    "lint": "eslint .",
    "test": "echo \"Warning: no test specified\" && exit 0"
  },
  "dependencies": {
    "color": "^0.11.3",
    "event-emitter-mixin": "^0.3.2",
    "lodash": "^4.14.0",
    "radium-normalize": "^2.0.4",
    "reduce-css-calc": "^1.2.4"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.5",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "denodeify": "^1.2.1",
    "eslint": "^3.1.1",
    "eslint-config-next": "^0.1.12",
    "eslint-plugin-react": "^5.2.2",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-watch": "^0.4.0",
    "prismjs": "^1.5.1",
    "radium": "^0.18.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "remarkable": "^1.6.2",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.7.0",
    "watchify": "^3.7.0"
  }
}
